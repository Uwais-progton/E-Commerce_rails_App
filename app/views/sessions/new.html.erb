<div class="form-container">
    <h1>Log In</h1>

    <%= form_with model: @user, url: session_path do |form|%>
        <div>
            <%= form.label :email %>
            <%= form.email_field :email %>
        </div>

        <div>
            <%= form.label :password %>
            <%= form.password_field :password %>
        </div>

        <div>
            <%= form.submit "Log In" %>
        </div>

    <% end %>
    <%= link_to "Forgot your password?", new_password_reset_path%>
</div>
<style>
    .form-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
</style>
