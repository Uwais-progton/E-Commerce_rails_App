<h1>About <%= @product.name%></h1>
<h2><%= @product.name %></h2>

<p><strong>Description:</strong> <%= @product.description %></p>
<p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>

<% if current_user&.admin? %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= button_to 'Add to Cart', cart_add_to_cart_path(@cart, product_id: @product.id), method: :post %>
<%= link_to "Back to products", products_url%>